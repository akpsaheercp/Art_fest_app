rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Test Build Rule: Allow all authenticated users to read and write everything.
    // This simplifies testing during the development phase.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Users can still only manage their own profile metadata
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}